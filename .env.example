# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Facebook Graph API Configuration
META_ACCESS_TOKEN=your_facebook_access_token
META_PAGE_ID=your_facebook_page_id
META_APP_ID=your_facebook_app_id
META_APP_SECRET=your_facebook_app_secret

# Facebook OAuth Configuration
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
NEXT_PUBLIC_FACEBOOK_REDIRECT_URI=https://your-domain.com/facebook-token

# AI Services
OPENAI_API_KEY=your_openai_api_key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Email Configuration (if using Resend)
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=https://your-domain.com

# Database Configuration (if using external database)
DATABASE_URL=your_database_connection_string

# Storage Configuration (if using external storage)
STORAGE_ACCESS_KEY=your_storage_access_key
STORAGE_SECRET_KEY=your_storage_secret_key
STORAGE_BUCKET=your_storage_bucket_name
STORAGE_REGION=your_storage_region

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_UPDATE_INTERVAL_HOURS=24

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production Configuration (set these in production)
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.com
